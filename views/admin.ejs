<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DeadLine Drift - Admin Panel</title>
  <style>
    body { 
      background:#0f0f0f; 
      color:#fff; 
      font-family:'Segoe UI',sans-serif; 
      margin:0; 
      padding:20px; 
    }
    .header { 
      display:flex; 
      justify-content:space-between; 
      align-items:center; 
      background:#1a1a1a; 
      padding:15px 30px; 
      border-radius:12px; 
      margin-bottom:20px; 
    }
    h1 { margin:0; color:#0f0; }
    table { 
      width:100%; 
      border-collapse:collapse; 
      background:#1a1a1a; 
      border-radius:12px; 
      overflow:hidden; 
    }
    th, td { 
      padding:12px; 
      text-align:left; 
      border-bottom:1px solid #333; 
    }
    th { background:#0a0a0a; }
    tr:hover { background:#222; }
    .form-container { 
      background:#1a1a1a; 
      padding:25px; 
      border-radius:12px; 
      margin-bottom:30px; 
    }
    input, select, button { 
      padding:10px; 
      margin:8px 0; 
      border-radius:6px; 
      width:calc(100% - 22px); 
    }
    input, select { 
      background:#222; 
      border:1px solid #0f0; 
      color:#fff; 
    }
    button { 
      background:#0f0; 
      color:#000; 
      font-weight:bold; 
      cursor:pointer; 
      border:none; 
    }
    .success { color:#0f0; font-weight:bold; margin:10px 0; }
    .error   { color:#ff4444; font-weight:bold; margin:5px 0; font-size:0.9em; }
    .finished { color:#0f0; font-weight:bold; }
    label { display:block; margin:10px 0; font-size:0.95em; }
    .form-group { position: relative; }
  </style>
</head>
<body>

  <div class="header">
    <h1>üèÅ DeadLine Drift - Admin Panel</h1>
    <div>
      <a href="/dashboard" style="color:#0f0; margin-right:20px; text-decoration:none;">View Live Leaderboard</a>
      <a href="/logout" style="color:#ff4444; text-decoration:none;">Logout</a>
    </div>
  </div>

  <% if (success) { %>
    <p class="success"><%= success %></p>
  <% } %>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>

  <div class="form-container">
    <h2>Add New Rider / Player</h2>
    <form method="POST" action="/admin/add-rider" id="riderForm">
      <div class="form-group">
        <input type="text" name="riderId" id="riderIdInput" placeholder="Rider ID (e.g. 101)" required>
        <div id="riderIdError" class="error" style="display:none;"></div>
      </div>

      <input type="text" name="name" placeholder="Player Name" required>

      <div class="form-group">
        <input type="tel" name="phone" id="phoneInput" placeholder="Phone Number (exactly 10 digits)" required pattern="[0-9]{10}">
        <div id="phoneError" class="error" style="display:none;">Phone number must be exactly 10 digits.</div>
      </div>
      
      <label>Time (MM:SS):</label>
      <div style="display:flex; gap:10px; align-items:center;">
        <select name="minute" required>
          <% for(let i=0; i<60; i++) { %>
            <option value="<%= i %>"><%= i.toString().padStart(2,'0') %></option>
          <% } %>
        </select>
        <span style="font-size:1.4em; color:#0f0;">:</span>
        <select name="second" required>
          <% for(let i=0; i<60; i++) { %>
            <option value="<%= i %>"><%= i.toString().padStart(2,'0') %></option>
          <% } %>
        </select>
      </div>

      <input type="number" name="distance" id="distanceInput" placeholder="Distance (meters)" min="1">
      
      <label>
        <input type="checkbox" name="finish" id="finishCheck"> 
        Mark as Finished (distance will be ignored / must be empty)
      </label>

      <button type="submit">Add Player</button>
    </form>
  </div>

  <h2>All Players / Riders</h2>

  <% if (riders && riders.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Rider ID</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Time</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% riders.forEach(r => { %>
          <tr>
            <td><strong><%= r.riderId || '???' %></strong></td>
            <td><%= r.name || '(no name)' %></td>
            <td><%= r.phone || '‚Äî' %></td>
            <td>
              <strong>
                <%= (typeof r.minute === 'number' ? r.minute.toString().padStart(2, '0') : '--') %>:
                <%= (typeof r.second === 'number' ? r.second.toString().padStart(2, '0') : '--') %>
              </strong>
            </td>
            <td>
              <% if (r.finish === true) { %>
                <span class="finished">‚úÖ Finished</span>
              <% } else { %>
                Distance: <%= (typeof r.distance === 'number' ? r.distance + ' m' : '---') %>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p style="text-align:center; color:#888; margin-top:30px;">
      No players added yet. Add your first player above!
    </p>
  <% } %>

  <script>
    const finishCheck = document.getElementById('finishCheck');
    const distanceInput = document.getElementById('distanceInput');
    const phoneInput = document.getElementById('phoneInput');
    const phoneError = document.getElementById('phoneError');
    const riderIdInput = document.getElementById('riderIdInput');
    const riderIdError = document.getElementById('riderIdError');
    const form = document.getElementById('riderForm');
  
    // Distance logic
    function updateDistanceField() {
      if (finishCheck.checked) {
        distanceInput.value = '';
        distanceInput.disabled = true;
        distanceInput.required = false;
      } else {
        distanceInput.disabled = false;
        distanceInput.required = true;
      }
    }
    updateDistanceField();
    finishCheck.addEventListener('change', updateDistanceField);
  
    // Phone: limit to 10 digits + disable after 10
    phoneInput.addEventListener('input', function(e) {
      let value = this.value.replace(/\D/g, '');
      if (value.length > 10) value = value.slice(0, 10);
      this.value = value;
  
      if (value.length === 10) {
        phoneError.style.display = 'none';
        this.disabled = true;
        this.style.background = '#222';
      } else {
        this.disabled = false;
        if (value.length > 0 && value.length < 10) {
          phoneError.style.display = 'block';
          phoneError.textContent = 'Phone number must be exactly 10 digits.';
        } else {
          phoneError.style.display = 'none';
        }
      }
    });
  
    // Re-enable on backspace/delete if disabled
    phoneInput.addEventListener('keydown', function(e) {
      if (e.key === 'Backspace' || e.key === 'Delete') {
        if (this.disabled) {
          this.disabled = false;
          phoneError.style.display = 'none';
        }
      }
    });
  
    // Rider ID check (unchanged)
    let checkTimeout;
    riderIdInput.addEventListener('input', function() {
      clearTimeout(checkTimeout);
      const riderId = this.value.trim();
      riderIdError.style.display = 'none';
      if (riderId === '') return;
  
      checkTimeout = setTimeout(() => {
        fetch('/admin/check-rider-id', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ riderId })
        })
        .then(res => res.json())
        .then(data => {
          if (data.exists) {
            riderIdError.textContent = 'ID already exists. Please use another ID.';
            riderIdError.style.display = 'block';
          }
        })
        .catch(err => console.error(err));
      }, 500);
    });
  
    // Form submit - critical fix for disabled phone
    form.addEventListener('submit', function(e) {
      // IMPORTANT: Re-enable phone so value is sent
      const wasDisabled = phoneInput.disabled;
      phoneInput.disabled = false;
  
      const phoneValue = phoneInput.value.trim();
  
      if (phoneValue.length !== 10 || !/^\d{10}$/.test(phoneValue)) {
        e.preventDefault();
        phoneError.style.display = 'block';
        phoneInput.focus();
        // Re-disable after failed attempt
        if (wasDisabled && phoneValue.length === 10) {
          setTimeout(() => { phoneInput.disabled = true; }, 100);
        }
        return;
      }
  
      // Rider ID check
      if (riderIdError.style.display !== 'none') {
        e.preventDefault();
        riderIdInput.focus();
        return;
      }
  
      // If everything is ok ‚Üí form submits normally
    });
  </script>

</body>
</html>